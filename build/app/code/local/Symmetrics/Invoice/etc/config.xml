<?xml version="1.0"?>
<config>
    <modules>
        <Symmetrics_Invoice>
            <version>0.1.0</version>
            <depends>
                <Mage_Payment />
            </depends>
        </Symmetrics_Invoice>
    </modules>
    <global>
    	<models>
    		<invoice>
	    		<class>Symmetrics_Invoice</class>
	    	</invoice>
    	</models>
        <resources>
            <invoice_setup>
                <setup>
                    <module>Symmetrics_Invoice</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </invoice_setup>
            <invoice_read>
                <connection>
                    <use>local_read</use>
                </connection>
            </invoice_read>
        </resources>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Symmetrics_Invoice>
                    <files>
                        <default>Symmetrics_Invoice.csv</default>
                    </files>
                </Symmetrics_Invoice>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <translate>
            <modules>
                <Symmetrics_Invoice>
                    <files>
                        <default>Symmetrics_Invoice.csv</default>
                    </files>
                </Symmetrics_Invoice>
            </modules>
        </translate>
    </frontend>
    <default>
        <payment>
        	<invoice>
				<active>0</active>
				<model>symmetrics_invoice_model_method_invoice</model>
				<order_status>pending</order_status>
				<title>Symmetrics_Invoice</title>
				<allowspecific>0</allowspecific>
        	</invoice>
        </payment>
    </default>
</config>
